<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorButtonNormal">#00796B</item>
    </style>

    <!-- Style for the headings. -->
    <style name="heading_text">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">#00796B</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
    </style>

    <!-- Style for candidate info EditText(s). -->
    <style name="candidate_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#A5A5A5</item>
        <item name="android:textColor">#F5F5F5</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <!-- Style for the question TextView(s). -->
    <style name="questions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">#FAFAFA</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Style for the question number TextView(s). -->
    <style name="nums">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Style for the choice groups, i.e. RadioGroup(s) or CheckBox(LinearLayout) group(s). -->
    <style name="choices_group">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Style for the answer choices. -->
    <style name="choices">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:buttonTint">#009688</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#E5E5E5</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Style for Button(s). -->
    <style name="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">#F5F5F5</item>

    </style>

</resources>
